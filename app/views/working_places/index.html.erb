<div class="col">
  <div class="account-wall">
    <div class="chase-logo">
      <h1 class="text-center">勤務地</h1>
      <p class="text-center">選択してください</p>
      <%= link_to "勤務地を追加", new_working_place_path, class: "btn btn-outline-primary btn-block" %>

      <table class="table table-hover">
        <thead>
          <tr>
            <th class='text-center'>勤務地一覧</th>
          </tr>
        </thead>
        <tbody>
          <% @working_places.each do |working_place| %>

          <tr>
            <td class='text-center'><%= link_to working_place.address, working_place, style: "width:100%; height:100%; display:block;" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
